generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Plan {
  free
  premium
}

enum SubscriptionPeriod {
  monthly
  yearly
}

model User {
  id            String  @id @default(cuid()) @map("_id")
  email         String  @unique
  name          String?
  image         String?
  plan          Plan    @default(free)
  modelCredits  Int     @default(0)
  imageCredits  Int     @default(2)

  Subscription  Subscription?
  Training      Training[]
  Play          Play[]
  FavoriteImages  FavoriteImages?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Subscription {
  id     String             @id @default(cuid()) @map("_id")
  userId String             @unique
  plan   Plan
  period SubscriptionPeriod

  startDate DateTime @default(now())
  endDate   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model Training {
  id            String             @id @default(cuid()) @map("_id")
  userId        String             
  images        String[]
  status        String             @default("IN PROGRESS")
  name          String
  triggerWord   String             @unique
  tuneId        String             @unique
  token         String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model Play {
  id            String             @id @default(cuid()) @map("_id")
  userId        String             
  images        String[]
  name          String
  prompt        String
  negativePrompt String
  requestId     String
    status        String             @default("IN PROGRESS")


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model FavoriteImages {
  id             String   @id @default(cuid()) @map("_id")
  userId         String   @unique
  favoriteImages String[] @default([])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model TemplatePlayground {
  id         String   @id @default(cuid()) @map("_id")
  pageId     String   @unique
  name       String
  images     String[]
  runCount   Int      @default(0)
  prePrompt  String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
